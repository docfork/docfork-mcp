{
  "name": "@docfork/mcp",
  "version": "2.0.0",
  "description": "Up-to-date code documentation for AI agents.",
  "mcpName": "io.github.docfork/docfork",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "watch": "tsc --watch",
    "inspect": "npx @modelcontextprotocol/inspector node dist/index.js",
    "dev": "concurrently \"npm run watch\" \"npm run inspect\"",
    "build": "tsc && chmod 755 dist/index.js",
    "start": "MCP_TRANSPORT=streamable-http node dist/index.js",
    "start:stdio": "MCP_TRANSPORT=stdio node dist/index.js",
    "lint": "eslint \"**/*.{js,ts,tsx}\" --fix --quiet --max-warnings=-1",
    "lint:check": "eslint \"**/*.{js,ts,tsx}\" --quiet --max-warnings=-1",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "test": "echo \"No tests specified\" && exit 0",
    "clean": "rm -rf dist node_modules",
    "preversion": "npm run lint:check && npm run typecheck && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/docfork/docfork.git"
  },
  "keywords": [
    "modelcontextprotocol",
    "mcp",
    "docfork"
  ],
  "author": "Docfork",
  "license": "MIT",
  "bin": {
    "docfork": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "bugs": {
    "url": "https://github.com/docfork/docfork/issues"
  },
  "homepage": "https://github.com/docfork/docfork#readme",
  "dependencies": {
    "@modelcontextprotocol/inspector": "0.18.0",
    "@modelcontextprotocol/sdk": "1.25.2",
    "dotenv": "^17.2.3",
    "jose": "^6.1.3",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@types/node": "25.0.9",
    "concurrently": "^9.2.1"
  }
}
